<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>FactorioNexus</RootNamespace>
    <ApplicationIcon>factorio.ico</ApplicationIcon>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug'">
		<OutputType>Exe</OutputType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<OutputType>WinExe</OutputType>
	</PropertyGroup>

	<ItemGroup>
    <None Remove="Fonts\clock-rotate-left.svg" />
    <None Remove="Fonts\cubes.svg" />
    <None Remove="Fonts\download.svg" />
    <None Remove="Fonts\factorio.png" />
    <None Remove="Fonts\gear.svg" />
    <None Remove="Fonts\TitilliumWeb-Bold.ttf" />
  </ItemGroup>

	<ItemGroup>
	  <Content Include="factorio.ico" />
	</ItemGroup>

  <ItemGroup>
	  <Resource Include="ApplicationPresentation\Markups\MainWindow\background.jpg" />
	  <Resource Include="ApplicationPresentation\Markups\MainWindow\factorio.png" />
	  <Resource Include="Fonts\TitilliumWeb-Bold.ttf" />
	  <Resource Include="Fonts\TitilliumWeb-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
    <PackageReference Include="System.Text.Json" Version="9.0.5" />
  </ItemGroup>

</Project>
