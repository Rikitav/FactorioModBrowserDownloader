<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>FactorioNexus</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\clock-rotate-left.svg" />
    <None Remove="Resources\cubes.svg" />
    <None Remove="Resources\download.svg" />
    <None Remove="Resources\factorio.png" />
    <None Remove="Resources\gear.svg" />
    <None Remove="Resources\TitilliumWeb.ttf" />
  </ItemGroup>

  <ItemGroup>
	  <Resource Include="Resources\background.jpg" />
	  <Resource Include="Resources\factorio.png" />
	  <EmbeddedResource Include="Resources\TitilliumWeb.ttf" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
    <PackageReference Include="System.Text.Json" Version="9.0.5" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ApplicationPresentation\Controls\" />
    <Folder Include="ApplicationPresentation\Styles\" />
    <Folder Include="Services\" />
  </ItemGroup>

</Project>
