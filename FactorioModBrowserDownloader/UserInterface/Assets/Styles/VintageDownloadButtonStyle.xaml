                                </DrawingGroup>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                        
                    </ControlTemplate.Resources>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>