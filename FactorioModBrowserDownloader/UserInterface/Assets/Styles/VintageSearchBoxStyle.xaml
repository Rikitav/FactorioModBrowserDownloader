<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FactorioNexus.UserInterface.Controls">

    <Style TargetType="controls:SearchBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="PlaceholderForeground" Value="#7F6453"/>
        <Setter Property="Placeholder" Value="Search..."/>
        <Setter Property="PlaceholderMargin" Value="0,-5,0,0"/>
        <Setter Property="PlaceholderFontSize" Value="20"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SearchBox">

                    <controls:ShadowOverlayBorder Background="#F0DAB4" CornerRadius="5">
                        <ContentPresenter Margin="14,0,5,0" Content="{TemplateBinding Content}"/>
                    </controls:ShadowOverlayBorder>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>