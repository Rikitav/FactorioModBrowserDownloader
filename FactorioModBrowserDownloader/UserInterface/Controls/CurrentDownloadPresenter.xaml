<UserControl x:Class="FactorioNexus.UserInterface.Controls.CurrentDownloadPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactorioNexus.UserInterface.Controls"
             xmlns:converters="clr-namespace:FactorioNexus.UserInterface.Extensions.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="this">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Nothing is downloading" Foreground="#A6A6A6" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsDownloading, ElementName=this, Converter={converters:BooleanToVisibilityConverter Inverse=True}}"/>

        <StackPanel Width="200" Visibility="{Binding IsDownloading, ElementName=this, Converter={converters:BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <local:ThumbnailViewer DataContext="{Binding CurrentDownloadingEntry, ElementName=this}" Height="30" Width="30"/>
                <TextBlock Text="{Binding CurrentDownloadingEntry.Title, ElementName=this}" Margin="10" Foreground="#A6A6A6"/>
            </StackPanel>
            <ProgressBar Value="{Binding CurrentDownloading.DownloadingProgress.Progress, Mode=OneWay, ElementName=this}"/>
        </StackPanel>
    </Grid>

</UserControl>
