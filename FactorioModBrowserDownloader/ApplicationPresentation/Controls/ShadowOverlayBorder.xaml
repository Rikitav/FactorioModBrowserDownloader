<UserControl x:Class="FactorioNexus.ApplicationPresentation.Controls.ShadowOverlayBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactorioNexus.ApplicationPresentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" x:Name="this" IsHitTestVisible="False">
    
    <Border BorderThickness="1.5" ClipToBounds="True">
        <Border Background="Transparent" BorderBrush="{Binding BorderBrush, ElementName=this, TargetNullValue=Black}" BorderThickness="10" Margin="-11.5" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10"/>
            </Border.Effect>
        </Border>
    </Border>
</UserControl>
