<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FactorioNexus.PresentationFramework.Controls">
    
    <Style TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">

                    <!-- Content -->
                    <StackPanel Orientation="Horizontal">
                        <controls:ClippingBorder x:Name="border" CornerRadius="3" Width="{TemplateBinding Height}">
                            <Grid x:Name="panel" Background="#8E8E8E">
                                <controls:ShadowOverlayBorder Panel.ZIndex="3"/>
                                <Ellipse x:Name="dot" Margin="10" Fill="Orange" Opacity="1" Panel.ZIndex="2"/>
                                <Image x:Name="image" Panel.ZIndex="1" Source="{DynamicResource checkMark}" Margin="5,4,4,5" Opacity="0"/>
                            </Grid>
                        </controls:ClippingBorder>

                        <ContentPresenter Margin="5,0,0,0" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="panel" Property="Background" Value="#E39827"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#E2B26A"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="panel" Property="Background" Value="#F1BE64"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#EFD2A0"/>
                                </Setter.Value>
                            </Setter>

                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="dot"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1" Duration="0:0:0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="dot"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0" Duration="0:0:0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="panel" Property="Background" Value="DarkOrange"/>

                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="image"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="image"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                    </ControlTemplate.Triggers>

                    <!-- Resources -->
                    <ControlTemplate.Resources>
                        
                        <DrawingImage x:Key="checkMark">
                            <DrawingImage.Drawing>
                                <DrawingGroup ClipGeometry="M0,0 V78.369 H78.369 V0 H0 Z">
                                    <DrawingGroup.Transform>
                                        <TranslateTransform X="0.00025000236928462982" Y="0" />
                                    </DrawingGroup.Transform>
                                    <DrawingGroup Opacity="1">
                                        <GeometryDrawing Brush="#FF000000" Geometry="F1 M78.369,78.369z M0,0z M78.049,19.015L29.458,67.606C29.03,68.034,28.337,68.034,27.91,67.606L0.32,40.015C-0.107,39.589,-0.107,38.896,0.32,38.468L7.024,31.764C7.452,31.337,8.145,31.337,8.572,31.764L28.685,51.876 69.798,10.763C70.227,10.336,70.918,10.336,71.346,10.763L78.049,17.467C78.477,17.894,78.477,18.586,78.049,19.015z" />
                                    </DrawingGroup>
                                </DrawingGroup>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                        
                    </ControlTemplate.Resources>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>